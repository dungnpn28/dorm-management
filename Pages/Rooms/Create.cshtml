@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Room</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Room.DormitoryId" class="control-label"></label>
                <select asp-for="Room.DormitoryId" class ="form-control" asp-items="ViewBag.DormitoryId"></select>
            </div>
            <div class="form-group">
                <label asp-for="Room.RoomNumber" class="control-label"></label>
                <input asp-for="Room.RoomNumber" class="form-control" />
                <span asp-validation-for="Room.RoomNumber" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Room.Floor" class="control-label"></label>
                <input asp-for="Room.Floor" class="form-control" />
                <span asp-validation-for="Room.Floor" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Room.RoomTypeId" class="control-label"></label>
                <select asp-for="Room.RoomTypeId" class ="form-control" asp-items="ViewBag.RoomTypeId"></select>
            </div>
            <div class="form-group">
                <label asp-for="Room.AvailabilityStatus" class="control-label"></label>
                <input asp-for="Room.AvailabilityStatus" class="form-control" />
                <span asp-validation-for="Room.AvailabilityStatus" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

