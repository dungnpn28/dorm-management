@page
@model DormitoryManagement.Pages.Account.RegisterVerifyModel
@{
    ViewData["Title"] = "Register Verify";
}

@if (Model.IsVerified)
{
    <h1 class="text-2xl font-bold mb-8 mt-16">@Model.Message</h1>
    <a asp-page="/Account/Login">Go back to login page</a>
}
else
{
    <h1 class="text-2xl font-bold mb-8 mt-16">@Model.Message</h1>
}
